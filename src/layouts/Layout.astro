---
import '@fontsource/inter';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Global Nexus Institute - Connect with future tech leaders" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Global Nexus Institute</title>
  </head>
  <body class="min-h-screen bg-gray-50">
    <header class="fixed top-0 w-full bg-white shadow-md z-50">
      <nav class="container mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
          <a href="/" class="flex items-center space-x-3">
            <img src="https://i.ibb.co/VvC0vpN/logo.png" alt="Global Nexus Institute Logo" class="h-12 w-auto" />
            <span class="text-2xl font-bold text-primary">Global Nexus Institute</span>
          </a>
          <div class="hidden md:flex space-x-6">
            <a href="/" class="text-gray-700 hover:text-primary">Home</a>
            <a href="/about" class="text-gray-700 hover:text-primary">About Us</a>
            <a href="/programs" class="text-gray-700 hover:text-primary">Programs</a>
            <a href="/services" class="text-gray-700 hover:text-primary">Services</a>
            <a href="/admissions" class="text-gray-700 hover:text-primary">Admissions</a>
            <a href="/research" class="text-gray-700 hover:text-primary">Research</a>
            <a href="/news" class="text-gray-700 hover:text-primary">News</a>
            <a href="/contact" class="text-gray-700 hover:text-primary">Contact</a>
          </div>
          <button id="mobile-menu-button" class="md:hidden" aria-label="Toggle menu">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
        
        <!-- Mobile Menu -->
        <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4">
          <div class="flex flex-col space-y-4">
            <a href="/" class="text-gray-700 hover:text-primary">Home</a>
            <a href="/about" class="text-gray-700 hover:text-primary">About Us</a>
            <a href="/programs" class="text-gray-700 hover:text-primary">Programs</a>
            <a href="/services" class="text-gray-700 hover:text-primary">Services</a>
            <a href="/admissions" class="text-gray-700 hover:text-primary">Admissions</a>
            <a href="/research" class="text-gray-700 hover:text-primary">Research</a>
            <a href="/news" class="text-gray-700 hover:text-primary">News</a>
            <a href="/contact" class="text-gray-700 hover:text-primary">Contact</a>
          </div>
        </div>
      </nav>
    </header>

    <main class="pt-16">
      <slot />
    </main>

    <footer class="bg-gray-900 text-white mt-20">
      <div class="container mx-auto px-4 py-12">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <div>
            <div class="flex items-center space-x-3 mb-4">
              <img src="https://i.ibb.co/VvC0vpN/logo.png" alt="Global Nexus Institute Logo" class="h-12 w-auto bg-white rounded-lg p-1" />
              <div>
                <h3 class="text-xl font-bold">Global Nexus Institute</h3>
                <p class="text-sm text-gray-400">Connect with future tech leaders</p>
              </div>
            </div>
            <div class="space-y-2 text-gray-400">
              <p>Earn international certifications</p>
              <p>Master key tech skills of 21st Century</p>
            </div>
          </div>
          <div>
            <h4 class="text-lg font-semibold mb-4">Quick Links</h4>
            <ul class="space-y-2">
