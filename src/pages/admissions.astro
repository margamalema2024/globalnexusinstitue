---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Admissions">
  <!-- Admissions Header -->
  <section class="pt-24 pb-16 bg-primary">
    <div class="container mx-auto px-4 text-white">
      <h1 class="text-4xl font-bold mb-6 text-center">Admissions</h1>
      <p class="text-xl text-center max-w-3xl mx-auto">
        Begin your journey towards a successful career in technology. Apply now to join our innovative learning community.
      </p>
    </div>
  </section>

  <!-- How to Apply -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">How to Apply</h2>
      <div class="max-w-4xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="w-16 h-16 bg-primary text-white rounded-full flex items-center justify-center mx-auto mb-4 text-2xl font-bold">1</div>
            <h3 class="text-xl font-semibold mb-2">Submit Application</h3>
            <p class="text-gray-600">Complete the online application form with your personal and academic information.</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-primary text-white rounded-full flex items-center justify-center mx-auto mb-4 text-2xl font-bold">2</div>
            <h3 class="text-xl font-semibold mb-2">Document Review</h3>
            <p class="text-gray-600">Our admissions team will review your application and supporting documents.</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-primary text-white rounded-full flex items-center justify-center mx-auto mb-4 text-2xl font-bold">3</div>
            <h3 class="text-xl font-semibold mb-2">Interview</h3>
            <p class="text-gray-600">Selected candidates will be invited for an interview with faculty members.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Application Button -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold text-gray-900 mb-8">Ready to Apply?</h2>
      <a href="https://forms.gle/your-google-form-link" target="_blank" class="inline-block bg-primary text-white px-8 py-4 rounded-full text-lg font-semibold hover:bg-primary-dark transition-colors">
        Apply Now
      </a>
    </div>
  </section>

  <!-- Scholarships -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Scholarships & Financial Aid</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        <div class="bg-gray-50 p-6 rounded-lg">
          <h3 class="text-xl font-semibold text-primary mb-4">Merit Scholarships</h3>
          <p class="text-gray-600 mb-4">Available for outstanding academic achievers, covering up to 50% of tuition fees.</p>
          <a href="#" class="text-primary hover:text-primary-dark font-semibold">Learn more →</a>
        </div>
        <div class="bg-gray-50 p-6 rounded-lg">
          <h3 class="text-xl font-semibold text-primary mb-4">Installment Plans</h3>
          <p class="text-gray-600 mb-4">Flexible payment options available to help manage your educational investment.</p>
          <a href="#" class="text-primary hover:text-primary-dark font-semibold">Learn more →</a>
        </div>
      </div>
    </div>
  </section>
</Layout>