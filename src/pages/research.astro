---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Research">
  <!-- Research Header -->
  <section class="pt-24 pb-16 bg-primary">
    <div class="container mx-auto px-4 text-white">
      <h1 class="text-4xl font-bold mb-6 text-center">Research & Innovation</h1>
      <p class="text-xl text-center max-w-3xl mx-auto">
        Exploring cutting-edge technologies and solutions to address global challenges through innovative research.
      </p>
    </div>
  </section>

  <!-- Research Areas -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Research Areas</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-gray-50 p-6 rounded-lg">
          <h3 class="text-xl font-semibold text-primary mb-4">Artificial Intelligence</h3>
          <p class="text-gray-600">Exploring advanced AI applications in healthcare, agriculture, and education.</p>
          <ul class="mt-4 space-y-2">
            <li class="flex items-center">
              <span class="text-primary mr-2">•</span>
              Natural Language Processing
            </li>
            <li class="flex items-center">
              <span class="text-primary mr-2">•</span>
              Computer Vision
            </li>
            <li class="flex items-center">
              <span class="text-primary mr-2">•</span>
              Robotics
            </li>
          </ul>
        </div>
        <div class="bg-gray-50 p-6 rounded-lg">
          <h3 class="text-xl font-semibold text-primary mb-4">Data Science</h3>
          <p class="text-gray-600">Developing innovative solutions for big data analytics and visualization.</p>
          <ul class="mt-4 space-y-2">
            <li class="flex items-center">
              <span class="text-primary mr-2">•</span>
              Predictive Analytics
            </li>
            <li class="flex items-center">
              <span class="text-primary mr-2">•</span>
              Data Mining
            </li>
            <li class="flex items-center">
              <span class="text-primary mr-2">•</span>
              Business Intelligence
            </li>
          </ul>
        </div>
        <div class="bg-gray-50 p-6 rounded-lg">
          <h3 class="text-xl font-semibold text-primary mb-4">Climate Tech</h3>
          <p class="text-gray-600">Researching technological solutions for environmental challenges.</p>
          <ul class="mt-4 space-y-2">
            <li class="flex items-center">
              <span class="text-primary mr-2">•</span>
              Sustainable Energy
            </li>
            <li class="flex items-center">
              <span class="text-primary mr-2">•</span>
              Carbon Footprint
            </li>
            <li class="flex items-center">
              <span class="text-primary mr-2">•</span>
              Smart Cities
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Publications -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Recent Publications</h2>
      <div class="max-w-4xl mx-auto space-y-6">
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-semibold text-primary mb-2">Machine Learning Applications in Healthcare</h3>
          <p class="text-gray-600 mb-4">A comprehensive study on implementing ML algorithms for early disease detection.</p>
          <div class="flex items-center text-sm text-gray-500">
            <span>Authors: Dr. Sarah Johnson, Dr. Michael Chen</span>
            <span class="mx-2">|</span>
            <span>Published: 2024</span>
          </div>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-semibold text-primary mb-2">Sustainable Smart Cities: A Data-Driven Approach</h3>
          <p class="text-gray-600 mb-4">Research on implementing IoT and data analytics for urban sustainability.</p>
          <div class="flex items-center text-sm text-gray-500">
            <span>Authors: Dr. Emma Williams, Prof. David Lee</span>
            <span class="mx-2">|</span>
            <span>Published: 2023</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Research Collaborations -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Research Collaborations</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        <div class="bg-gray-50 p-6 rounded-lg">
          <h3 class="text-xl font-semibold text-primary mb-4">Academic Partners</h3>
          <ul class="space-y-2">
            <li class="flex items-center">
              <span class="text-primary mr-2">•</span>
              Rwanda Management Institute
            </li>
            <li class="flex items-center">
              <span class="text-primary mr-2">•</span>
              NCC UK Research Center
            </li>
            <li class="flex items-center">
              <span class="text-primary mr-2">•</span>
              East African Technology Institute
            </li>
          </ul>
        </div>
        <div class="bg-gray-50 p-6 rounded-lg">
          <h3 class="text-xl font-semibold text-primary mb-4">Industry Partners</h3>
          <ul class="space-y-2">
            <li class="flex items-center">
              <span class="text-primary mr-2">•</span>
              Tech Innovation Labs
            </li>
            <li class="flex items-center">
              <span class="text-primary mr-2">•</span>
              Digital Solutions Corp
            </li>
            <li class="flex items-center">
              <span class="text-primary mr-2">•</span>
              African Data Center
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>
</Layout>